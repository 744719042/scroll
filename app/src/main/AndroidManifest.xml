<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.scroll">

    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <application
        android:name=".Application"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SingleActivity" />
        <activity android:name=".MultiActivity" />
        <activity android:name=".DraggerHelperActivity" />
        <activity android:name=".ScrollActivity" />
        <activity android:name=".NestedScrollActivity" />
        <activity android:name=".DragAndDropActivity" />
        <activity android:name=".DragListViewActivity" />
        <activity android:name=".SwipeActivity"></activity>
    </application>

</manifest>